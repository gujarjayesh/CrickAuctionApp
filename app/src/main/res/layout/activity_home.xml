<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/background"
    tools:context="com.js.crickauctionapp.HomeScreen.HomeActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/create_auction_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/create_auction_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginStart="@dimen/_70sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/create_auction"
                android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/create_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lemon_regular"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_20sdp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auction"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lemon_regular"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_below="@+id/create_tv"
                    android:textSize="@dimen/_20sdp"/>




        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/creditedCardBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/auction_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/join_auction_new"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/join_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join"
                android:textColor="@color/black"
                android:fontFamily="@font/lemon_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_20sdp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auction"
                android:textColor="@color/black"
                android:fontFamily="@font/lemon_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_below="@+id/join_tv"
                android:textSize="@dimen/_20sdp"/>




        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>